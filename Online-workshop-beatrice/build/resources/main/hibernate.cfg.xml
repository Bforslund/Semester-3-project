<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
<!--        <property name="connection.driver_class">org.h2.Driver</property>-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
<!--        <property name="connection.url">jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE</property>-->
        <property name="connection.url">jdbc:mysql://studmysql01.fhict.local:3306/dbi431685</property>
        <property name="connection.username">dbi431685</property>
        <property name="connection.password">password</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout
        <property name="show_sql">true</property>-->

        <!-- Do not drop and re-create the database schema on startup-->
        <property name="hbm2ddl.auto">none</property>

        <!-- if you do not use Annotations in Student class, then: <mapping resource="Student.hbm.xml"/>-->
        <mapping class="individual.project.model.Item"/>
        <mapping class="individual.project.model.User"/>
        <mapping class="individual.project.model.Order"/>
        <mapping class="individual.project.model.OrderItem"/>
        <mapping class="individual.project.model.Recipe"/>
      </session-factory>

  </hibernate-configuration>